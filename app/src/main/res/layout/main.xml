    app:bg_alpha="100"
    app:bg_color="#ffcccc"
    app:bg_radius="10dp"
    app:bg_border_width="3.0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView

        android:layout_margin="5dp"
        android:background="@drawable/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello" />
