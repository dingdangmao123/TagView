        android:background="@drawable/text"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="world" />

    <TextView
        android:background="@drawable/text"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Google" />
    <TextView
        android:background="@drawable/text"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apple" />
    <TextView
        android:background="@drawable/text"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amazon" />
    <TextView
        android:background="@drawable/text"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NIKE" />
    <TextView
        android:background="@drawable/text"

        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrofit" />
    <TextView
        android:background="@drawable/text"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook" />
    <TextView
        android:background="@drawable/text"

        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eventbus" />
    <TextView
        android:background="@drawable/text"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RxJava" />

    </com.dingdangmao.tagview.TagView>
</RelativeLayout>
